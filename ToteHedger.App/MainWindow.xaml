<Window x:Class="ToteHedger.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToteHedger.App"
        mc:Ignorable="d"
        Title="Tote Hedger" Height="240" Width="520">
    <Grid Margin="16" RowDefinitions="Auto,Auto,Auto,*" ColumnDefinitions="Auto,*">
        <TextBlock Grid.Row="0" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center" Text="Meeting ID:"/>
        <TextBox Grid.Row="0" Grid.Column="1" Margin="0,0,0,8" MinWidth="240" Text="{Binding MeetingId, UpdateSourceTrigger=PropertyChanged}"/>

        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,0,0,8">
            <Button Content="Start" Width="100" Margin="0,0,8,0" Command="{Binding StartCommand}" IsEnabled="{Binding IsRunning, Converter={StaticResource InverseBoolConverter}, FallbackValue=True}"/>
            <Button Content="Stop" Width="100" Command="{Binding StopCommand}" IsEnabled="{Binding IsRunning}"/>
        </StackPanel>

        <TextBlock Grid.Row="2" Grid.ColumnSpan="2" Margin="0,0,0,8" FontWeight="Bold" Text="Status:"/>
        <TextBlock Grid.Row="3" Grid.ColumnSpan="2" Text="{Binding Status}"/>
    </Grid>
</Window>
